{
  "compilerOptions": {
    "lib": ["ES2021"],
    "module": "NodeNext",
    "target": "ES2021",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "rewriteRelativeImportExtensions": true,
  },
  "include": ["src/**/*.ts", "src/main.mts"]
}
